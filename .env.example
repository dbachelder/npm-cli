# NPM CLI Configuration
# Copy this file to .env and customize for your environment

# NPM API base URL (HTTP or HTTPS)
# Default: http://localhost:81
# Example: http://192.168.1.100:81
# Example: https://npm.example.com
NPM_API_URL=http://localhost:81

# Docker container name for NPM
# Default: nginx-proxy-manager
# Change if your container has a different name
NPM_CONTAINER_NAME=nginx-proxy-manager

# NPM credentials (optional - can be stored in system keyring instead)
# Leave empty to use keyring-based credential storage
# Username is typically an email address
NPM_USERNAME=
NPM_PASSWORD=

# Auto-discover NPM container via Docker API
# Default: true
# Set to false if you want to use NPM_API_URL directly without Docker discovery
NPM_USE_DOCKER_DISCOVERY=true
